@{
}
<div class="container p-3">
    <div clss="row pt-3">
        <div class="col-6 text-end">
            <h2>Students List</h2>
        </div>
        <div class="col-6 ">
            <a asp-controller="FireSpirit" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>               
                Create New List
            </a>
          
        </div>
    </div>

    <br />
    <br />
       <table class="table table-bordered table-striped" style="width:100%;">
<thead>
    <tr>
        <th>
            Students Name
        </th>
                    <th>
                        Students class
                    </th>
                    <th>
                        
                        Phone Number
                    </th>
                <th>

                   Looking For These
                </th>

    </tr>
</thead>
<tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td width="20%">@obj.Name</td>
                    <td width="20%">@obj.Class</td>
                    <td width="20%">@obj.PhoneNumber</td>
                    <td >
                        <div class="w-50 btn-group"role="group">
                            <a asp-controller="FireSpirit" asp-action="Edit" asp-route-id="@obj.Id"class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                        
                            <a asp-controller="FireSpirit" asp-action="Delete" asp-route-id="@obj.Id"class="btn btn-danger mx-2"><i class="bi bi-trash3"></i>Delete</a>
                        </div>
                    </td>
                    </tr>
                    
                }


</tbody>

       </table>
    
</div>