
@model ThisIsIt.Models.ViewModels.LoginModel

<div class=" container col-5 pt-4">

<div class="card ">
    <div class="card-header"style="color:white;background-color:gray">
     Login Form
    </div>
    <div class="card-body">
        <div class="row-5">
        <form method="post">
            <div class="col mb-3">
            <label for="">Email</label>
            <input type="email" placeholder="example@gmail.com"  asp-for="Email" class="form-control"/>
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="col mb-3">
                        
            <label for="">Password</label>
                        <input type="password" placeholder="Enter the password" asp-for="Password"class="form-control" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
               

                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="checkboxId">
                                    <label class="form-check-label" for="checkboxId">
                                        Keep Logged In 
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
<br/>
                    <div>

                   <input type="submit" class="btn btn-primary me-2" value="Sign In"/>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary" >GoBack</a><br />

                 
                    </div>

                </form>
        </div>
    </div>
</div>
</div>
@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}
